<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.tictacv1.GameController" >
<padding><Insets bottom="20" top="20" right="20"/></padding>
<top>
        <HBox alignment="BOTTOM_CENTER" spacing="50">
            <Label fx:id="playerPoints" style="-fx-font-weight: bold" text="Player points: " />
            <Label fx:id="moveCounter" text="Moves: " />
            <Label fx:id="computerPoints" style="-fx-font-weight: bold" text="ComputerPoints: " />

        </HBox>
</top>
<center>
        <VBox spacing="2">
            <HBox alignment="CENTER" spacing="50">
                <Label fx:id="winner" style="-fx-font-weight: bold; -fx-font-size: 20; -fx-text-fill: Green"/>

            </HBox>
            <HBox alignment="CENTER" spacing="2">
                <Button fx:id="one" onMouseClicked="#clicked" prefHeight="200" prefWidth="200" styleClass="game-button" style="-fx-font-size: 50; -fx-text-fill: Blue; -fx-background-color: Black" />
                <Button fx:id="two" onMouseClicked="#clicked" prefHeight="200" prefWidth="200" styleClass="game-button" style="-fx-font-size: 50; -fx-text-fill: Blue; -fx-background-color: Black" />
                <Button fx:id="three" onMouseClicked="#clicked" prefHeight="200" prefWidth="200" styleClass="game-button" style="-fx-font-size: 50; -fx-text-fill: Blue; -fx-background-color: Black" />

            </HBox>

            <HBox alignment="CENTER" spacing="2">
                <Button fx:id="four" onMouseClicked="#clicked" prefHeight="200" prefWidth="200" styleClass="game-button" style="-fx-font-size: 50; -fx-text-fill: Blue; -fx-background-color: Black" />
                <Button fx:id="five" onMouseClicked="#clicked" prefHeight="200" prefWidth="200" styleClass="game-button" style="-fx-font-size: 50; -fx-text-fill: Blue; -fx-background-color: Black" />
                <Button fx:id="six" onMouseClicked="#clicked" prefHeight="200" prefWidth="200" styleClass="game-button" style="-fx-font-size: 50; -fx-text-fill: Blue; -fx-background-color: Black" />
            </HBox>

            <HBox alignment="CENTER" spacing="2">
                <Button fx:id="seven" onMouseClicked="#clicked" prefHeight="200" prefWidth="200" styleClass="game-button" style="-fx-font-size: 50; -fx-text-fill: Blue; -fx-background-color: Black" />
                <Button fx:id="eight" onMouseClicked="#clicked" prefHeight="200" prefWidth="200" styleClass="game-button" style="-fx-font-size: 50; -fx-text-fill: Blue; -fx-background-color: Black" />
                <Button fx:id="nine" onMouseClicked="#clicked" prefHeight="200" prefWidth="200" styleClass="game-button" style="-fx-font-size: 50; -fx-text-fill: Blue; -fx-background-color: Black" />
            </HBox>

        </VBox>
</center>

    <bottom>
    <HBox alignment="CENTER" spacing="20">
        <Button fx:id="resetGame" onMouseClicked="#resetGameOnClick" text="Reset" />
        <Button fx:id="newGame" onMouseClicked="#newGameOnClick" text="Play again" />
        <Button fx:id="quitToMenu" onMouseClicked="#exit" text="Quit to menu" />
    </HBox>
    </bottom>


</BorderPane>
